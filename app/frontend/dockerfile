# ==========================
# 1️⃣ Build Stage
# ==========================
FROM node:20-alpine AS build

WORKDIR /app

# Copy package files
COPY package*.json ./

# Clean npm cache & install dependencies
RUN npm cache clean --force
RUN npm install

# Copy source code
COPY . .

# Build the production frontend
RUN npm run build

# ==========================
# 2️⃣ Run Stage
# ==========================
FROM nginx:alpine

COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 3000

CMD ["nginx", "-g", "daemon off;"]
